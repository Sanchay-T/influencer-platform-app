{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|mcp__morph-mcp__edit_file",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/lint.sh\"",
            "timeout": 30000
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/check-length.sh\"",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}
